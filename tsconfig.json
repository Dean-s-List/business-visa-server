{
    "compilerOptions": {
        "module": "NodeNext",
        "target": "ES2022",
        "rootDir": "src",
        "outDir": "dist",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "strict": true,
        "moduleResolution": "NodeNext",
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "src/db/migrations", "drizzle.config.ts"]
}

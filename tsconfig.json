{
    "compilerOptions": {
        "module": "NodeNext",
        "target": "ES2022",
        "rootDir": ".",
        "outDir": "dist",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "strict": true,
        "moduleResolution": "NodeNext",
        "noEmit": true,
        "allowImportingTsExtensions": true
    },
    "include": ["src/**/*.ts", "drizzle.config.ts"],
    "exclude": ["node_modules"]
}
